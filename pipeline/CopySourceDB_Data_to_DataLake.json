{
	"name": "CopySourceDB_Data_to_DataLake",
	"properties": {
		"description": "Copy the data from bank's transactional db to Data Lake on Azure",
		"activities": [
			{
				"name": "ForEach_wse",
				"type": "ForEach",
				"dependsOn": [],
				"userProperties": [],
				"typeProperties": {
					"items": {
						"value": "@pipeline().parameters.cw_items",
						"type": "Expression"
					},
					"activities": [
						{
							"name": "Copy_wse",
							"type": "Copy",
							"dependsOn": [],
							"policy": {
								"timeout": "7.00:00:00",
								"retry": 0,
								"retryIntervalInSeconds": 30,
								"secureOutput": false,
								"secureInput": false
							},
							"userProperties": [
								{
									"name": "Source",
									"value": "dbo.@{item().source.table}"
								},
								{
									"name": "Destination",
									"value": "outputfolder//@{item().destination.fileName}"
								}
							],
							"typeProperties": {
								"source": {
									"type": "AzureSqlSource",
									"partitionOption": "None"
								},
								"sink": {
									"type": "DelimitedTextSink",
									"storeSettings": {
										"type": "AzureBlobFSWriteSettings"
									},
									"formatSettings": {
										"type": "DelimitedTextWriteSettings",
										"quoteAllText": true,
										"fileExtension": ".txt"
									}
								},
								"enableStaging": true,
								"stagingSettings": {
									"linkedServiceName": {
										"referenceName": "BankDataLake",
										"type": "LinkedServiceReference"
									},
									"path": "staging"
								},
								"enableSkipIncompatibleRow": true,
								"logSettings": {
									"enableCopyActivityLog": true,
									"copyActivityLogSettings": {
										"logLevel": "Warning",
										"enableReliableLogging": false
									},
									"logLocationSettings": {
										"linkedServiceName": {
											"referenceName": "BankDataLake",
											"type": "LinkedServiceReference"
										},
										"path": "logs"
									}
								}
							},
							"inputs": [
								{
									"referenceName": "SourceDataset_wse",
									"type": "DatasetReference",
									"parameters": {
										"cw_table": "@item().source.table"
									}
								}
							],
							"outputs": [
								{
									"referenceName": "DestinationDataset_wse",
									"type": "DatasetReference",
									"parameters": {
										"cw_fileName": "@item().destination.fileName"
									}
								}
							]
						}
					]
				}
			}
		],
		"parameters": {
			"cw_items": {
				"type": "Array",
				"defaultValue": [
					{
						"source": {
							"table": "account"
						},
						"destination": {
							"fileName": "dboaccount.csv"
						}
					},
					{
						"source": {
							"table": "card"
						},
						"destination": {
							"fileName": "dbocard.csv"
						}
					},
					{
						"source": {
							"table": "client"
						},
						"destination": {
							"fileName": "dboclient.csv"
						}
					},
					{
						"source": {
							"table": "disp"
						},
						"destination": {
							"fileName": "dbodisp.csv"
						}
					},
					{
						"source": {
							"table": "district"
						},
						"destination": {
							"fileName": "dbodistrict.csv"
						}
					},
					{
						"source": {
							"table": "loan"
						},
						"destination": {
							"fileName": "dboloan.csv"
						}
					},
					{
						"source": {
							"table": "orders"
						},
						"destination": {
							"fileName": "dboorders.csv"
						}
					},
					{
						"source": {
							"table": "trans"
						},
						"destination": {
							"fileName": "dbotrans.csv"
						}
					}
				]
			}
		},
		"annotations": []
	}
}